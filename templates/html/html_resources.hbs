{{#if capabilities.resources}}
<h2>ðŸ“„ Resources ({{len resources}})</h2>

<table style="text-align: left;">
    <thead>
        <tr>
            <th style="width: auto;"></th>
            <th style="width: auto;">Resource Name</th>
            <th style="width: auto;">Uri</th>
            <th style="width: auto;">Description</th>
        </tr>
    </thead>
    <tbody style="vertical-align: top;">
        {{#each resources}}
        <tr>
            <td>{{plus_one @index}}.</td>
            <td>
                <code><b>{{this.name}}</b></code>
            </td>
            <td>
                <a>{{this.uri}}</a> {{#if this.mimeType}}<i>({{{this.mimeType}}})</i>{{/if}}
            </td>
            <td>{{{replace_regex (replace_regex this.description "'([\\w\\-\\_]+)'" "<code>$1</code>")
                "\\[([\\w\\-\\_]+)\\]" "<code>$1</code>"}}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/if}}